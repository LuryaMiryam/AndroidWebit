<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/al_ty_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/width_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel_title_"
        android:layout_marginBottom="13.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/txt_type"
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:text="@string/det_app_give_service_txt"
            android:textColor="@color/color1" />

        <RelativeLayout
            android:id="@+id/r_all"
            android:layout_width="172.5dp"
            android:layout_height="27.5dp"
            android:layout_alignParentEnd="true"
            android:background="@color/black"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/supplier_galaxy_icons_new_arrow_x1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:id="@+id/txt"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:background="@android:color/transparent"
                android:textColor="@color/color_white" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>