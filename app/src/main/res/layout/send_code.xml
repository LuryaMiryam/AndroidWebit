<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
        android:id="@+id/title_message"
        style="@style/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/verification_mail1"
        android:textAllCaps="false"
        android:textColor="@color/pink" />

    <webit.bthereapp.CustemViews.Fonts.CustomRegularTextView
        android:id="@+id/h1__message"
        style="@style/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_message"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/verification_mail2" />

    <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
        android:id="@+id/et_verification_mail"
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:paddingStart="5dp"
        android:layout_below="@+id/h1__message"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:textColor="@color/color_white"
        android:inputType="number"/>



    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        android:id="@+id/OK_send"
        android:textAllCaps="false"
        android:layout_width="92.5dp"
        android:layout_height="36dp"
        android:layout_below="@+id/et_verification_mail"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="12dp"
        android:background="@color/pink"
        android:text="@string/verification_mail_send"
        android:textColor="@android:color/white" />
</RelativeLayout>