<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@color/light_gray_9">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/client_galaxy_icons1_22" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:background="@color/transparent">

        <LinearLayout
            android:id="@+id/welcome_title_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                android:id="@+id/welcome_title"
                style="@style/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:gravity="center_horizontal"
                android:text=""
                android:textColor="@color/color4"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/image_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcome_title_"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"

            android:background="@color/color4">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/user_2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_p"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/adress_txt"
                style="@style/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:gravity="start"
                android:text=""
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/mail_txt"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="sabch1@gmail.com"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/phone_txt"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="052-1116524"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/date_txt"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="24.3.1986"
                android:textColor="@color/color1" />

            <View
                android:id="@+id/viewLinear1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="7dp"
                android:background="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/massege_txt"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text=""
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                android:id="@+id/welcome_ok"
                style="@style/t1"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginBottom="20dp"
                android:background="@color/color4"
                android:stateListAnimator="@null"
                android:text="@string/update_datails"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/image_d"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color4">

                    <ImageView

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/user_2" />
                </LinearLayout>

                <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                    android:id="@+id/delete_cus"
                    style="@style/t1"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color4"
                    android:paddingStart="10dp"
                    android:text="@string/delete_cus"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>