<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="400dp"
    android:background="@color/light_gray_9">


    <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
        android:id="@+id/title"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:text="@string/print_calendar"
        android:textColor="@color/light_blue"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7.5dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/client_galaxy_icons1_22" />


    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:background="@color/transparent"
        android:orientation="vertical">




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="13.5dp"

            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="@string/from_date"
                android:textColor="@color/color1" />

            <RelativeLayout
                android:id="@+id/choose_from"
                android:layout_width="172.5dp"
                android:layout_height="27.5dp"
                android:layout_alignParentEnd="true"
                android:background="@color/dark_gray_6_tra"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/down_arrow" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t1"
                    android:id="@+id/choose_from_txt"
                    android:gravity="center_vertical"
                    android:paddingStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color1" />

            </RelativeLayout>


        </RelativeLayout> <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="13.5dp"

            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="@string/to_date"
                android:textColor="@color/color1" />

            <RelativeLayout
                android:id="@+id/choose_to"
                android:layout_width="172.5dp"
                android:layout_height="27.5dp"
                android:layout_alignParentEnd="true"
                android:background="@color/dark_gray_6_tra"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/down_arrow" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t1"
                    android:id="@+id/choose_to_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:paddingStart="5dp"
                    android:gravity="center_vertical"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color1" />

            </RelativeLayout>


        </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@string/see"
                android:layout_marginEnd="10dp"
                android:textColor="@color/color1" />
            <LinearLayout
                android:gravity="end"
                android:layout_gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageButton
                    android:id="@+id/day"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    android:src="@drawable/supplier_galaxy_icons_x1_29" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:text="@string/day"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/color1" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:id="@+id/week"
                    android:scaleType="fitXY"
                    android:layout_marginStart="4dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/supplier_galaxy_icons_x1_29" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:text="@string/week"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/color1" />

                <ImageButton
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitXY"
                    android:id="@+id/list"
                    android:layout_marginStart="4dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/supplier_galaxy_icons_x1_29" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:text="@string/list"
                    android:layout_marginStart="4dp"
                    android:textColor="@color/color1" />
            </LinearLayout>
        </LinearLayout>

        <webit.bthereapp.CustemViews.Fonts.CustomLightButton
            android:id="@+id/ok"
            style="@style/t1"
            android:paddingStart="7dp"
            android:paddingEnd="5dp"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="27.5dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:background="@color/color4"
            android:text="@string/send_pdf"
            android:textColor="@android:color/white" />


    </LinearLayout>
</RelativeLayout>