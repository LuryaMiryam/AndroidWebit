<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="320dp"
    android:layout_height="200dp"
    android:weightSum="11">
    <LinearLayout
        android:id="@+id/LinearLayoutAboutOne"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="start"
        android:weightSum="9"
        android:background="@color/transparent"
        android:visibility="gone"
        >
        <RelativeLayout
            android:paddingStart="-50dp"
            android:layout_gravity="start"
            android:id="@+id/rlv2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:rotation="360"
            android:background="@color/transparent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/trangle" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearLayoutDis"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/transparent"
            ></LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="5dp"
        android:layout_weight="9"
        android:weightSum="3.6"
        android:id="@+id/rlv1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/blackTransparent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.8">
            <ImageView
                android:id="@+id/imageButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/xwhite"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1.2"
            android:gravity="center">
            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/picture"
                android:gravity="center_vertical|center_horizontal"
                android:textColor="@color/color_white"
                style="@style/h1"
                android:textSize="25sp"/>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/Line1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_margin="15dp"
            android:gravity="center_vertical"
            >
            <ImageView
                android:id="@+id/imageViewGalary"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/put_up"
                />
            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/galary"
                android:textSize="18sp"
                android:textColor="@color/color_white"
                android:layout_toEndOf="@id/imageViewGalary"
                android:layout_marginStart="13dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/Line2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="18dp"
            android:layout_marginTop="15dp">
            <ImageView
                android:id="@+id/imageViewCmera"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/photographer"

                />
            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/camera_to"
                style="@style/t1"
                android:textColor="@color/color_white"
                android:gravity="center"
                android:layout_toEndOf="@id/imageViewCmera"
                android:layout_marginStart="14dp"/>
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/linearLayoutEnd"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="start"
        android:weightSum="9"
        android:background="@color/transparent">
        <RelativeLayout
            android:paddingStart="-68dp"
            android:layout_gravity="start"
            android:id="@+id/rlv22"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:rotation="360"
            android:background="@color/transparent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:src="@drawable/reverse_trangle"
                />
        </RelativeLayout>
</LinearLayout>
</LinearLayout>

