<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:RelativeLayoutandroid="http://schemas.android.com/apk/res-auto"
    android:id="@+id/top"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="7dp"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context=".Screens.Register.MainActivity.TopFragment">
    <LinearLayout
        android:id="@+id/topL"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"></LinearLayout>

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <LinearLayout
         android:layout_alignParentStart="true"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp">

        <ImageView
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_gravity="center"
        android:src="@drawable/back" />

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
        style="@style/t4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
            android:layout_marginStart="3dp"
        android:textColor="@color/light_blue" />
        </LinearLayout>

        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
        android:id="@+id/title"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        android:textColor="@color/color4"
        android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</LinearLayout>

