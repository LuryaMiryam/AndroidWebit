<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/r_all"
    android:layout_width="match_parent"
    android:layout_height="33dp"
    android:background="@color/color1">

    <View

        style="@style/personal_details_view"
        android:layout_width="match_parent"
        android:layout_height="0.20dp"
        android:background="@color/color_white" />

    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
        android:id="@+id/type_text"
        style="@style/t1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|center_vertical"
        android:paddingBottom="5dp"
        android:paddingStart="@dimen/personal_details_r_paymant_paddingRight"
        android:paddingTop="5dp"
        android:text="Header"
        android:textColor="@color/color_white"/>

    <ImageView
        android:id="@+id/image"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_width="20dp"
        android:src="@drawable/supplier_galaxy_icons_x1_42"
        android:layout_marginEnd="10dp"
        android:layout_height="20dp" />

</RelativeLayout>