<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/existed_user_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
            style="@style/h1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/existed_user"
            android:textColor="@color/color3"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/existed_user_title"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="13dp"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_vertical|end">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/existed_user_tv1"
                style="@style/t1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:gravity="end|center_vertical"
                android:text="@string/user_name" />
        </LinearLayout>

        <EditText
            android:layout_width="0dip"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/existed_user_tv1"
            android:layout_weight="2"
            android:background="@color/black"
            android:gravity="end"
            android:paddingStart="5dp"
            android:textColor="@color/color_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true"
        android:weightSum="3">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical|end"
            android:layout_weight="1">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/existed_user_tv2"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/existed_user_title"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:gravity="end"
                android:text="@string/password" />
        </LinearLayout>

        <EditText
            android:layout_width="0dip"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/existed_user_tv1"
            android:layout_weight="2"
            android:background="@color/black"
            android:paddingStart="5dp"
            android:textColor="@color/color_white" />
    </LinearLayout>


    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        android:id="@+id/login_existing_user"
        android:layout_width="82dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/linearLayout3"
        android:layout_marginTop="8dp"
        android:background="@color/color3"
        android:text="@string/login_"
        android:textAllCaps="false"
        android:textColor="@color/color_white" />

</RelativeLayout>