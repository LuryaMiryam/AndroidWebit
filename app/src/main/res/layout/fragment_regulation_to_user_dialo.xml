<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="400dp"
    android:background="@color/light_gray_9">


    <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
        android:id="@+id/title"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:text="@string/regulation_to_user"
        android:textColor="@color/light_blue"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/close"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="7.5dp"
        android:layout_marginTop="7.5dp"
        android:background="@drawable/client_galaxy_icons1_22" />


    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:background="@color/transparent"
        android:orientation="vertical">


        <webit.bthereapp.CustemViews.Fonts.CustomRegularTextView
            style="@style/t1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

                      android:background="@android:color/transparent"
            android:text="@string/regulation_to_user_txt"
            android:textColor="@color/color1" />


    </LinearLayout>
</RelativeLayout>