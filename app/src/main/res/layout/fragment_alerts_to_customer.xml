<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="false"
    android:orientation="vertical"
    tools:context="webit.bthereapp.Screens.Register.BusinessRegister.BusinessProfileFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
        android:id="@+id/per_det_title_"
        style="@style/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingBottom="30dp"
        android:paddingTop="@dimen/personal_details_title_paddingTop"
        android:text="@string/alerts"
        android:textColor="@color/color3" />

        <View
            style="@style/personal_details_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_color" />

        <RelativeLayout
            android:id="@+id/al_c_90_r"
            android:layout_width="match_parent"
            android:layout_height="53.5dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/personal_details_r_paymant_paddingRight">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="@string/al_c_90"

                android:textColor="@color/color1" />


            <webit.bthereapp.CustemViews.YesOrNo_White
                android:id="@+id/al_c_90_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:focusable="true"
                android:gravity="end" />
        </RelativeLayout>



        <View
            android:id="@+id/view_2"
            style="@style/personal_details_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="53.5dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/personal_details_r_paymant_paddingRight">

            <LinearLayout
                android:id="@+id/al_c_20_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="7dp"
                android:gravity="end"
                android:orientation="vertical">

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    android:id="@+id/al_c_20"
                    style="@style/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:text="@string/al_c_20"
                    android:textColor="@color/color1" />
            </LinearLayout>


            <webit.bthereapp.CustemViews.YesOrNo_White
                android:id="@+id/al_c_20_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:clickable="true"
                android:focusable="true" />


        </RelativeLayout>


        <View
            style="@style/personal_details_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_color" />

        <RelativeLayout
            android:id="@+id/al_c_ok_b_r"
            android:layout_width="match_parent"
            android:layout_height="53.5dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/personal_details_r_paymant_paddingRight">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/al_c_ok_b"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="@string/al_c_ok_b"

                android:textColor="@color/color1" />
            <webit.bthereapp.CustemViews.YesOrNo_White
                android:id="@+id/al_c_ok_b_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="end"></webit.bthereapp.CustemViews.YesOrNo_White>

        </RelativeLayout>


        <View
            style="@style/personal_details_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_color" />

        <RelativeLayout
            android:id="@+id/al_c_ok_wait_r"
            android:layout_width="match_parent"
            android:layout_height="53.5dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/personal_details_r_paymant_paddingRight">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/al_c_ok_wait"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="@string/al_c_ok_wait"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.YesOrNo_White
                android:id="@+id/al_c_ok_wait_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="end" />

        </RelativeLayout>

        <View
            style="@style/personal_details_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_color" />

        <RelativeLayout
            android:id="@+id/al_c_new_r"
            android:layout_width="match_parent"
            android:layout_height="53.5dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/personal_details_r_paymant_paddingRight">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/al_c_new"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:text="@string/al_c_new"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.YesOrNo_White
                android:id="@+id/al_c_new_yn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:gravity="end" />

        </RelativeLayout>
        <View
            style="@style/personal_details_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_color" />



        <webit.bthereapp.CustemViews.Fonts.CustomLightButton
            android:id="@+id/alerts_continue"
            style="@style/t1"
            android:layout_width="@dimen/personal_details_sign_b_width"
            android:layout_height="@dimen/personal_details_sign_b_height"
            android:layout_marginTop="90dp"
            android:layout_alignParentStart="true"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="13dp"
            android:background="@color/color3"
            android:gravity="center"
            android:text="@string/save_"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff" />


        <webit.bthereapp.CustemViews.Fonts.CustomLightButton
            android:id="@+id/ok"
            style="@style/t1"
            android:layout_width="@dimen/personal_details_sign_b_width"
            android:layout_height="@dimen/personal_details_sign_b_height"
            android:textAllCaps="false"
            android:layout_alignParentStart="true"
            android:layout_gravity="end"
            android:layout_marginEnd="13dp"
            android:background="@color/light_blue"
            android:gravity="center"
            android:text="@string/ok"
            android:textColor="#ffffff"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
