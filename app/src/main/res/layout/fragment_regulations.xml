<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:id="@+id/reg_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
            style="@style/h1"
            android:id="@+id/regulations_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/regulations_"
            android:textColor="@color/color3"
            android:textSize="35dp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_gravity="bottom"
        android:weightSum="2">

        <webit.bthereapp.CustemViews.Fonts.CustomLightButton
            style="@style/t1"
            android:id="@+id/cancel_regulation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/personal_details_button_height"
            android:layout_alignParentBottom="true"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:background="@color/color3"
            android:text="@string/regolations_cancel"
            android:textColor="@color/color1"
            />

        <webit.bthereapp.CustemViews.Fonts.CustomLightButton
            android:id="@+id/ok_regulation"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/personal_details_button_height"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:textAllCaps="false"
            android:background="@color/color3"
            android:text="@string/regulations_ok"
            android:textColor="@color/color1"
            style="@style/t1" />


    </LinearLayout>


</LinearLayout>
