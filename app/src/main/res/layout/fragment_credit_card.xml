<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_trans"
    android:orientation="vertical"

    tools:context="webit.bthereapp.Screens.Register.Dialogs.CreditCardFragment">

    <!-- TODO: Update blank fragment layout -->
    <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
        style="@style/h1"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/payment_credit_card"
        android:textColor="@color/light_gray_2" />

    <LinearLayout
        android:id="@+id/owner_name_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingEnd="@dimen/personal_details_r_paymant_paddingRight"
        android:paddingStart="@dimen/personal_details_r_paymant_paddingRight"
        android:paddingTop="@dimen/personal_details_r_paymant_marginTop">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/owner_of_card"
            android:textColor="@color/color_white" />

        <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
            android:id="@+id/owner_name"
            style="@style/t1"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:background="@color/light_gray_2"
            android:inputType="text"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/color1" />

    </LinearLayout>

    <webit.bthereapp.CustemViews.CustomSpinner
        android:id="@+id/credit_card_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        app:customSpinnerSize="large"
        app:customSpinnerType="pay_c_c_type"></webit.bthereapp.CustemViews.CustomSpinner>

    <LinearLayout
        android:id="@+id/numCard_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingEnd="@dimen/personal_details_r_paymant_paddingRight"
        android:paddingStart="@dimen/personal_details_r_paymant_paddingRight"
        android:paddingTop="2dp">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/al_type_txt"
            style="@style/t1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/numCard"
            android:textColor="@color/color_white" />

        <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
            android:id="@+id/number_of_card"
            style="@style/t1"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:background="@color/light_gray_2"
            android:inputType="number"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/color1" />

    </LinearLayout>

    <webit.bthereapp.CustemViews.CreditCardValidity
        android:id="@+id/CreditCardValidity_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="3dp"
        android:paddingStart="3dp">

    </webit.bthereapp.CustemViews.CreditCardValidity>


    <LinearLayout
        android:id="@+id/three_numbers_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingEnd="@dimen/personal_details_r_paymant_paddingRight"
        android:paddingStart="@dimen/personal_details_r_paymant_paddingRight"
        android:paddingTop="2dp">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/threeNumbers"
            android:textColor="@color/color_white" />

        <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
            android:id="@+id/three_numbers"
            style="@style/t1"
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="end"
            android:layout_marginStart="5dp"
            android:background="@color/light_gray_2"
            android:inputType="number"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:textColor="@color/color1"
            android:maxLength="3"/>

    </LinearLayout>


    <webit.bthereapp.CustemViews.CustomSpinner
        android:id="@+id/number_of_Payments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        app:customSpinnerSize="large"
        app:customSpinnerType="pay_c_c_nump"></webit.bthereapp.CustemViews.CustomSpinner>


    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        android:id="@+id/next_pay_"
        style="@style/t1"
        android:padding="5dp"
        android:layout_width="wrap_content"
  android:layout_height="30dp"
        android:layout_gravity="end"
        android:textAllCaps="false"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="13sp"
        android:layout_marginTop="20dp"
        android:background="@color/light_blue"
        android:gravity="end"
        android:text="@string/ok_payment"
        android:textColor="#ffffff" />
</LinearLayout>