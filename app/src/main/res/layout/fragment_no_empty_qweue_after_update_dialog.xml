<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_9"
    android:minWidth="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7.5dp"
            android:layout_marginTop="7.5dp"
            android:background="@drawable/client_galaxy_icons1_22" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:orientation="vertical">

            <webit.bthereapp.CustemViews.Fonts.CustomRegularTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="@string/no_empty_qweue_after_update" />

            <webit.bthereapp.CustemViews.Fonts.CustomRegularTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/what_you_want_to_do" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                style="@style/t1"
                android:id="@+id/option_1"
                android:layout_width="180dp"
                android:textAllCaps="false"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:background="@color/color3"
                android:text="@string/option_1"
                android:textColor="@color/color_white" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                style="@style/t1"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:id="@+id/option_2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:textAllCaps="false"
                android:background="@color/color3"
                android:text="@string/option_2_2"
                android:textColor="@color/color_white" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                style="@style/t1"
                android:layout_width="180dp"
                android:id="@+id/option_3"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:textAllCaps="false"
                android:background="@color/color3"
                android:text="@string/option_2"
                android:textColor="@color/color_white" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                style="@style/t1"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:background="@color/color3"
                android:textAllCaps="false"
                android:text="@string/option_4_2"
                android:id="@+id/option_4"
                android:textColor="@color/color_white"
                android:layout_marginBottom="15dp"/>
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>
