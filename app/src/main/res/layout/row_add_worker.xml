<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp">
<webit.bthereapp.CustemViews.Fonts.CustomLightTextView
    android:text="gthy"
    style="@style/t1"
    android:textColor="@color/light_gray_2"
    android:id="@+id/worker_name"
    android:layout_width="wrap_content"
    android:paddingStart="5dp"
    android:layout_height="wrap_content"
   android:layout_alignParentStart="true"/>


        <View
            android:layout_width="0.5dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@+id/pencil"
            android:background="@color/light_gray_2"></View>
        <LinearLayout
            android:layout_width="36dp"
            android:id="@+id/pencil"
            android:layout_alignParentEnd="true"
            android:paddingBottom="7dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="7dp"
            android:layout_height="36dp">
            <ImageButton
                android:id="@+id/pencil_"
                android:layout_width="18dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:layout_height="18dp"

                android:background="@drawable/edit" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:background="@color/light_gray_2"
        android:layout_width="match_parent"
        android:layout_height="5dp"></View>
</LinearLayout>
