<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_pic_supplier_x1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/rr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


            <!-- TODO: Update blank fragment layout -->
            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                style="@style/h1"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="@string/my_customers"
                android:layout_gravity="center"
                android:textColor="@color/light_blue" />

        <RelativeLayout
            android:id="@+id/search_line_kl"
            android:layout_width="334dp"
            android:layout_height="37dp"
                  android:layout_gravity="center"
            android:layout_marginTop="23.5dp"
            android:background="@color/color8"
            android:orientation="vertical">


            <View
                android:id="@+id/search_line_k2"
                android:layout_width="0.5dp"
                android:layout_height="62dp"
                android:layout_toEndOf="@+id/search_linek"
                android:background="@color/view_color"
                android:paddingStart="5dp" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                android:id="@+id/search_linek"
                style="@style/t1"
                android:layout_width="289.5dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:paddingStart="5dp"
                android:alpha="0.5"
                android:background="@null"
                android:hint="@string/search_customer"
                android:imeOptions="actionSearch"
                android:singleLine="true"
                android:textColorHint="@color/color1" />


            <RelativeLayout
                android:layout_width="44.5dp"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/search_line_k2">

                <ImageButton
                    android:id="@+id/search_line_iconk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="5dp"
                    android:background="@color/color8"
                    android:scaleType="fitXY"
                    android:src="@drawable/client_galaxy_icons1_21" />

            </RelativeLayout>
        </RelativeLayout>

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                android:layout_width="1dp"
                android:visibility="invisible"
                android:id="@+id/et"
                android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/add_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13.5dp"
            android:background="@color/color4"
            android:paddingEnd="5dp"
            android:paddingStart="5dp">

            <webit.bthereapp.CustemViews.Fonts.CustomRegularTextView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:text="+"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="@color/color4"
                android:gravity="center_vertical"
                android:text="@string/add_customer"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <ListView
            android:id="@+id/customers_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13.5dp"></ListView>
    </LinearLayout>
</LinearLayout>
