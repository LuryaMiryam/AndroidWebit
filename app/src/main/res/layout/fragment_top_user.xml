<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/space"
            android:layout_width="@dimen/search_width"
            android:layout_height="@dimen/search_hight"
            android:layout_marginEnd="11dp"
            android:background="@color/dark_gray_7"

            >android:layout_marginEnd="@dimen/space"

            <ImageView
                android:id="@+id/search_button"
                android:layout_width="35.9dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:src="@drawable/client_galaxy_icons1_21" />


            <webit.bthereapp.CustemViews.Fonts.CustemLightAutoCompleteTextView
                android:id="@+id/search"
                style="@style/t3"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:background="@color/transparent"
                android:hint="@string/search_et"
                android:imeOptions="actionSearch"
                android:maxLength="120"
                android:paddingStart="5dp"
                android:singleLine="true" />
        </RelativeLayout>

        <View
            android:id="@+id/vi"
            android:layout_width="1dp"
            android:layout_height="@dimen/search_hight"
            android:layout_toEndOf="@+id/space"
            android:background="@color/black" />
        android:layout_marginEnd="11dp"
        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/advance_search"
            style="@style/t3"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/search_hight"
            android:layout_gravity="end"
            android:background="@color/dark_gray_6"
            android:gravity="center_vertical"
            android:paddingEnd="2dp"
            android:layout_alignParentEnd="true"
            android:paddingStart="2dp"
            android:singleLine="true"
            android:text="@string/advanced_search" />

        android:layout_alignParentEnd="true"
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/display_next"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</LinearLayout>
