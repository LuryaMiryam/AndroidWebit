<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="5dp"
        android:background="@color/color4">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:gravity="end">
            <RelativeLayout
                android:id="@+id/day_r"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/client_galaxy_icons1_19" />

                <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                    android:id="@+id/day_in_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:text=""
                    android:textColor="@color/color_white" />

                <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end"
                    android:layout_toEndOf="@+id/day_in_week"
                    android:text=""
                    android:textColor="@color/color_white" />
            </RelativeLayout>


            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                android:id="@+id/day_in_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/day_r"
                android:text=""
                android:textColor="@color/color_white" />

            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                android:id="@+id/month"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/day_in_month"
                android:text=""
                android:textColor="@color/color_white" />

            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/month"
                android:text=""
                android:textColor="@color/color_white" />

        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/waiting_list"
        android:layout_width="wrap_content"
        android:layout_height="10dp"></ListView>
</LinearLayout>
