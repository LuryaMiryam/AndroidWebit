<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="6dp"
    android:layout_marginTop="6dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="start">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="start|center_vertical"
            android:gravity="center_vertical"
            android:text="@string/phone__"
            android:textColor="@color/color1" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end">

        <RelativeLayout
            android:id="@+id/r1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical|right">

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                android:id="@+id/ed_edit"
                style="@style/t1"
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:layout_marginStart="4.5dp"
                android:background="@color/dark_gray_6_tra"
                android:gravity="center_vertical|right"
                android:inputType="phone"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:textColor="@color/color1" />

        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/r_all"
            android:layout_width="56.5dp"
            android:layout_height="35dp"
            android:layout_marginStart="4.5dp"
            android:layout_toLeftOf="@+id/r1"
            android:background="@color/light_gray_9"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/down_arrow" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/txt"
                style="@style/t1"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:background="@color/dark_gray_6_tra"
                android:gravity="center_vertical|start"
                android:paddingStart="5dp"
                android:text="052" />

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>