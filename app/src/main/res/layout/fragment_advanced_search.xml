<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:weightSum="3"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2.8"
        android:orientation="vertical"
        android:weightSum="16">

        <ImageButton
            android:id="@+id/imageCancel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="end"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="13dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="3dp"
            android:background="@color/transparent"
            android:src="@drawable/xx" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/mainLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="15"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:id="@+id/secondLinearLayout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="5">

                <LinearLayout
                    android:id="@+id/domainLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:gravity="center_vertical"
                    android:paddingStart="13dp">
                    <!--android:layout_height="46.5dp"-->

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        android:id="@+id/domainTV"
                        style="@style/t1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/domain"
                        />

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        android:id="@+id/domainChoose"
                        style="@style/t1"
                        android:layout_marginStart="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/areaLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingStart="13dp">

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        android:id="@+id/areaTV"
                        style="@style/t1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:text="@string/areaD" />

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        android:id="@+id/areaChoose"
                        style="@style/t1"
                        android:layout_marginStart="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black" />

                <LinearLayout
                    android:id="@+id/dateLinearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:paddingStart="13dp">

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        android:id="@+id/dateTV"
                        style="@style/t1"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="start"
                        android:text="@string/dateLike" />

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        android:id="@+id/dateChoose"
                        style="@style/t1"
                        android:layout_marginStart="40dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black" />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3">
    <LinearLayout
        android:id="@+id/time_and_save"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="visible"
        android:id="@+id/timeLinearLayout"
      android:layout_width="match_parent"
        android:layout_height="70dp"
        android:paddingStart="13dp">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/timeTV"
            style="@style/t1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="start"
            android:text="@string/timeHours" />

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/TimeChoose"
            style="@style/t1"
            android:layout_marginStart="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/black" />
        <LinearLayout
            android:id="@+id/searchLinearLayut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp">

            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                android:id="@+id/searchButton"
                style="@style/t1"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textAllCaps="false"
                android:background="@color/color3"
                android:text="@string/search"
                android:textColor="@color/color_white" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/customTimePicker"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:orientation="horizontal">
        <View
            android:background="@color/black"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />
<LinearLayout
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="30dp">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from" />

            <webit.bthereapp.CustemViews.TimeText
                android:id="@+id/fromTime"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="10dp"
                android:background="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginTop="20dp">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/to" />

            <webit.bthereapp.CustemViews.TimeText
                android:id="@+id/toTime"
                android:layout_width="120dp"
                android:layout_height="25dp"
                android:layout_marginStart="7dp"
                android:background="@color/black" />
        </LinearLayout>

        <webit.bthereapp.CustemViews.Fonts.CustomLightButton
            style="@style/t1"
            android:id="@+id/btn_save"
            android:layout_width="120dp"
            android:layout_height="25dp"
            android:layout_marginTop="20dp"
            android:background="@color/color3"
            android:textAllCaps="false"
            android:text="@string/sav"
            android:textColor="@color/color_white" />
    <View
        android:layout_marginTop="7dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
            </LinearLayout>

            <View
                android:id="@+id/view"
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/black"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/expandedLinearLayout"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/LinearLayoutAboutAutoComplete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="12">

                    <View
                        android:layout_width="0dip"
                        android:layout_height="55dp"
                        android:layout_gravity="start"
                        android:layout_weight="1"
                        android:background="@color/color8" />

                    <webit.bthereapp.CustemViews.Fonts.CustemLightAutoCompleteTextView
                        android:windowSoftInputMode="stateVisible"
                        android:id="@+id/autoComplete"
                        android:layout_width="0dip"
                        android:layout_height="55dp"
                        android:layout_weight="10"
                        android:background="@color/color8"
                        android:popupBackground="@color/transparent" />

                    <View
                        android:layout_width="0dip"
                        android:layout_height="55dp"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:background="@color/color8" />
                </LinearLayout>
                <View
                    android:id="@+id/ViewPicker"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>