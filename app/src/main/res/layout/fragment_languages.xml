<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp">
    <!-- TODO: Update blank fragment layout -->
    <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView

        android:layout_centerHorizontal="true"
        style="@style/h1"
        android:textColor="@color/light_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Languages" />

    <LinearLayout
        android:layout_alignParentStart="true"
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:background="@color/black"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="3dp"
        android:paddingStart="1dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/back" />

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:textColor="@color/light_blue" />
    </LinearLayout>
</RelativeLayout>

    <View
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="@dimen/personal_details_viewlayout_height"/>


    <ListView
        android:id="@+id/list_of_Languages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></ListView>


    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        android:layout_gravity="end"
        android:textColor="@color/color_white"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:background="@color/light_blue"
        android:textAllCaps="false"
        android:text="@string/save_"
        android:id="@+id/save"
        android:layout_width="71.5dp"
        android:layout_height="30dp"
        style="@style/t1"/>
</LinearLayout>
