<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:background="@color/light_gray_9"
    android:minWidth="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="13.5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginEnd="7.5dp"
            android:layout_marginTop="7.5dp"
            android:background="@drawable/client_galaxy_icons1_22" />
        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
            android:id="@+id/title"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"

            android:text="@string/new_operation"
            android:textColor="@color/light_blue"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/width_all"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="13.5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="@string/date"
                android:textColor="@color/color1" />

            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="172.5dp"
                android:layout_height="27.5dp"
                android:layout_alignParentEnd="true"
                android:background="@color/dark_gray_6_tra"
                android:gravity="end"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/down_arrow" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t1"
                    android:id="@+id/date_tv"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color1" />

            </RelativeLayout>


        </RelativeLayout>

</LinearLayout>
    <webit.bthereapp.Screens.Supplier.CustomSpinnerLarge
            android:layout_marginEnd="37dp"
            android:layout_marginStart="37dp"
            android:id="@+id/type_"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:customSpinnerLargeType="det_app_type_service_3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="13.5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="@string/from_hour"
                android:textColor="@color/color1" />

            <RelativeLayout
                android:layout_width="172.5dp"
                android:layout_height="27.5dp"
                android:layout_alignParentEnd="true"
                android:background="@color/dark_gray_6_tra"
                android:gravity="end"
                android:id="@+id/from_hour_id"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:src="@drawable/down_arrow" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t1"
                    android:id="@+id/from_hour_id_txt"
                    android:layout_width="180dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="start|center_vertical"
                    android:background="@android:color/transparent"
                    android:textColor="@color/color1" />

            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="37dp"
    android:layout_marginStart="37dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel_title_"
        android:layout_marginBottom="13.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:text="@string/to_hour"
            android:textColor="@color/color1" />

        <RelativeLayout
            android:layout_width="172.5dp"
            android:layout_height="27.5dp"
            android:id="@+id/to_hour_id"

            android:layout_alignParentEnd="true"
            android:background="@color/dark_gray_6_tra"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/down_arrow" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:id="@+id/to_hour_id_txt"
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:background="@android:color/transparent"
                android:textColor="@color/color1" />

        </RelativeLayout>


    </RelativeLayout>
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:layout_marginStart="37dp"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="@string/comments"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                style="@style/t1"
                android:id="@+id/txt_"
                android:layout_width="172.5dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="@color/dark_gray_6_tra"
                android:gravity="start"
                android:paddingStart="5dp"
                android:textColor="@color/color1" />

        </RelativeLayout>

        <webit.bthereapp.CustemViews.Fonts.CustomLightButton
            android:id="@+id/ok"
            style="@style/t1"
            android:layout_width="wrap_content"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:textAllCaps="false"
            android:layout_height="27.5dp"
            android:layout_gravity="end"
            android:layout_alignParentEnd="true"
                      android:layout_marginTop="10dp"
            android:background="@color/color4"
            android:gravity="center"
            android:text="@string/add_operation"
            android:layout_marginBottom="13.5dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>