<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/circleBlackIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:src="@drawable/circle_black"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/circleOrangeIV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_margin="4dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/circle_orange"
        android:visibility="invisible" />

    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
        android:id="@+id/textViewDays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="gg"
        android:textColor="@color/dark_gray_7"
        android:textSize="25sp" />

    <View
        android:id="@+id/view_"
        style="@style/personal_details_view"
        android:layout_width="30dp"
        android:layout_height="0.5dp"
        android:layout_below="@+id/textViewDays"
        android:layout_centerHorizontal="true"
        android:background="@color/view_color"
        android:visibility="gone" />

</RelativeLayout>