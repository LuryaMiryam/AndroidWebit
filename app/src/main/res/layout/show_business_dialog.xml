<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray_9"
    android:minWidth="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
            android:id="@+id/title"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/shoe_bussiness_title"
            android:textColor="@color/color3"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7.5dp"
            android:layout_marginTop="7.5dp"
            android:background="@drawable/client_galaxy_icons1_22" />
    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"></RelativeLayout>

    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        style="@style/t1"
        android:layout_width="91.5dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/color3"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/continue2"
        android:textAllCaps="false"
        android:textColor="@android:color/white" />


</LinearLayout>






