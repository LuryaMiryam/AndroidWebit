<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="330dp"
    android:layout_height="350dp"
    android:weightSum="11">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="start"
        android:weightSum="9"
        android:background="@color/transparent">

        <RelativeLayout
            android:paddingStart="-20dp"
            android:layout_gravity="start"
            android:id="@+id/rlv2"
            android:layout_width="90dp"
            android:layout_height="100dp"
            android:rotation="360"
            android:background="@color/transparent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/trangle" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearLayoutDis"
            android:layout_width="0dip"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@color/transparent"
            />
    </LinearLayout>
    <View
        android:layout_gravity="start"
        android:layout_width="90dp"
        android:layout_height="0.5dp"
        android:background="@color/black"
        android:layout_below="@id/rlv2"/>
    <LinearLayout
        android:layout_weight="9"
        android:weightSum="4"
        android:id="@+id/rlv1"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/blackTransparent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageButtonCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="6dp"
                android:src="@drawable/xwhite"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.6"
            android:gravity="center">
            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/informationBusines"

                android:textColor="@color/color_white"
                style="@style/h1"/>

        </LinearLayout>
        <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
            android:id="@+id/editTextInformation"
            android:layout_width="match_parent"
            android:layout_weight="2.5"
            android:layout_height="0dp"
            android:paddingStart="7dp"
            android:hint="@string/enterText"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/color_white"
            android:gravity="top"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.9">
            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                style="@style/t1"
                android:id="@+id/buttonSaveEnter"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/saveEnter"
                android:layout_alignParentBottom="true"
                android:layout_margin="15dp"
                android:textColor="@color/color_white"
                android:background="@color/color4"
                android:layout_alignParentEnd="true"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>