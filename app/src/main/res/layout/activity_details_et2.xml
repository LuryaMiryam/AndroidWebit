<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/color1"
    android:paddingEnd="5dp"
    android:paddingStart="5dp"
    android:weightSum="2"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/details_et_2_txt"
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start|center_vertical"
            android:gravity="start"
            android:text="@string/name"

            android:textColor="@color/color_white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_gravity="end"
            android:layout_weight="2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:background="@color/light_gray_2"
                android:gravity="end"
                android:weightSum="5">
                <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                    android:id="@+id/details_et_2_et"
                    style="@style/t1"
                    android:layout_width="0dip"
                    android:layout_height="25dp"
                    android:layout_gravity="start|center_vertical"
                    android:layout_weight="5"
                    android:background="@color/light_gray_2"
                    android:gravity="start|center_vertical"
                    android:inputType="text"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:textColor="@color/color1" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>