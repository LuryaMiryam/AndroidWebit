<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:plus="http://schemas.android.com/tools"
    android:id="@+id/paymentL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        style="@style/personal_details_view"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/personal_details_view_marginTop"
        android:layout_height="0.5dp"
        android:background="@color/view_color" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="5dp">


        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_marginStart="5dp"
            android:id="@+id/b_payment_how2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/b_payment_how"
            android:layout_centerVertical="true"
            android:gravity="start"
            android:layout_alignParentStart="true" />


        <LinearLayout
            android:id="@+id/b_phone_ll"
            android:layout_width="75.5dp"
            android:layout_height="75.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/b_payment_how2"
            android:background="@color/color3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/b_phone_img"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/telepone" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/b_phone_img"
                android:text="@string/b_phone"
                android:textColor="@android:color/white" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/b_credit_ll"
            android:layout_width="75.5dp"
            android:layout_height="75.5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="22dp"
            android:layout_toEndOf="@+id/b_phone_ll"
            android:layout_marginTop="10dp"
            android:background="@color/color3"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/b_credit_img"
                android:layout_width="60dp"
                android:layout_height="55dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:src="@drawable/credit" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_toEndOf="@+id/b_credit_img"
                android:text="@string/b_credit"
                android:textColor="@android:color/white" />
        </LinearLayout>


    </RelativeLayout>

    <View
        android:id="@+id/view_2"
        style="@style/personal_details_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/view_color" />

    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
        style="@style/t1"
        android:id="@+id/required"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="13dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="@string/bla_bla"
      />

    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        style="@style/t1"
        android:id="@+id/continue1"
        android:textAllCaps="false"
        android:paddingStart="7dp"
        android:paddingEnd="7dp"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/personal_details_sign_b_height"
        android:layout_alignParentStart="true"
        android:layout_gravity="end"
        android:layout_marginEnd="13dp"
        android:background="@color/color4"
        android:gravity="center"
        android:text="@string/continue2"
        android:textColor="#ffffff"
        android:textSize="@dimen/personal_details_b_image_textSize" />


    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        style="@style/t1"
        android:id="@+id/ok"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/personal_details_sign_b_height"
        android:textAllCaps="false"
        android:layout_alignParentStart="true"
        android:layout_gravity="end"
        android:layout_marginEnd="13dp"
        android:background="@color/color4"
        android:gravity="center"
        android:text="@string/ok"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:textSize="@dimen/personal_details_b_image_textSize" />



</LinearLayout>
