<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/pencil_r"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/black">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/worker_name_w"
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingBottom="7dp"
            android:paddingStart="12dp"
            android:paddingTop="7dp"
            android:text="gthy"
            android:textColor="@color/color_white" />
        <RelativeLayout
            android:id="@+id/pencil_w"
            android:layout_width="48dp"
            android:layout_height="48dp"
          android:layout_toStartOf="@+id/delete_w"
            android:layout_centerVertical="true"
            android:paddingBottom="7dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="7dp">

            <ImageView
                android:id="@+id/pencil__w"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/edit"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/delete_w"
            android:background="@color/light_gray_2"/>

        <RelativeLayout
            android:id="@+id/delete_w"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:paddingBottom="7dp"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:paddingTop="7dp">

            <ImageView
                android:id="@+id/delete__w"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/supplier_galaxy_icons_x1_48"
                android:scaleType="fitXY" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view_first"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray_2"/>

   <LinearLayout
       android:id="@+id/con_deatils_worker"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical" />

    <View
        android:id="@+id/view_second"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/light_gray_2"
        android:visibility="gone"/>

</LinearLayout>
