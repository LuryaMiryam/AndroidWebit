<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="110dp"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <!-- TODO: Update blank fragment layout -->
    <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
        android:layout_gravity="center"
        android:textColor="@color/pink"
        style="@style/h1"
        android:text="@string/Existed_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:layout_marginEnd="7dp"/>

        <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
            android:id="@+id/phone_number"
            android:inputType="number"
            android:background="@color/black"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:paddingStart="5dp"
            android:textColor="@color/color_white"
            />
    </LinearLayout>

    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        android:id="@+id/send_phone_number"
        android:layout_gravity="end"
        android:background="@color/pink"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:text="@string/connect"
        android:textAllCaps="false"
        android:textColor="@color/color_white"/>
</LinearLayout>
