<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/all"
    android:layout_width="match_parent"
    android:layout_height="60.5dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/r_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <HorizontalScrollView
            android:id="@+id/scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/all_"
                android:layout_width="560dp"
                android:layout_height="wrap_content">


                <RelativeLayout
                    android:gravity="end"
                    android:id="@+id/qweue_row"
                    android:layout_width="310dp"
                    android:layout_height="@dimen/highet_list"
                    android:layout_gravity="end"
                    android:clickable="false"
                    android:focusable="false"
                    android:visibility="visible">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                        android:paddingStart="10dp"
                        android:id="@+id/txt"
                        android:gravity="start"
                        android:layout_marginEnd="13dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true">

                        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                            android:id="@+id/hour"
                            android:layout_gravity="start"
                            style="@style/h2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00-09:30"
                            android:textColor="@color/black" />

                        <webit.bthereapp.CustemViews.Fonts.CustomRegularTextView
                            android:id="@+id/type"
                            android:gravity="start"
                            android:layout_gravity="end"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text=""
                            android:textColor="@color/black" />
                    </LinearLayout>
                    </RelativeLayout>
                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/view_color" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/buttons"
                    android:layout_width="146dp"
                    android:layout_height="60.5dp"
                    android:layout_gravity="start"

                    android:orientation="horizontal"
                    android:visibility="visible">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <RelativeLayout
                        android:id="@+id/details_qweue"
                        android:layout_width="73dp"
                        android:layout_height="@dimen/ser_op_h"
                        android:orientation="vertical"
                        android:paddingBottom="3dp"
                        android:paddingTop="13dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/supplier_galaxy_icons_x1_21" />

                        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                            style="t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/details_qweue" />
                    </RelativeLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/black" />

                    <RelativeLayout

                        android:id="@+id/cancel_qweue"
                        android:layout_width="73dp"
                        android:layout_height="@dimen/ser_op_h"
                        android:clickable="true"
                        android:focusable="false"
                        android:orientation="vertical"
                        android:paddingBottom="3dp"
                        android:paddingTop="13dp">

                        <ImageView
                            android:id="@+id/order_many_image"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:src="@drawable/supplier_galaxy_icons_x1_22" />

                        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                            android:id="@+id/text_choose_many"
                            style="t3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/cancel_qweue" />
                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>


    </RelativeLayout>
</RelativeLayout>
