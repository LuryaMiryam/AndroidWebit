<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent"
    android:minWidth="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_marginBottom="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
            android:id="@+id/title"
            style="@style/h1"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="@string/update_appointment2"
            android:textColor="@color/orange" />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="7.5dp"
            android:layout_marginTop="7.5dp"
            android:background="@drawable/client_galaxy_icons1_22" />
    </RelativeLayout>

    <webit.bthereapp.CustemViews.CustomSpinnerLargeBlack
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/new_app_give_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
     app:customSpinnerLargeBlackType="black_give_service" />

    <webit.bthereapp.CustemViews.CustomSpinnerLargeBlack
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/black_type_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:customSpinnerLargeBlackType="black_type_service" />
    <RelativeLayout
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:id="@+id/width_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel_title_"
        android:layout_marginBottom="13.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            android:id="@+id/txt_type"
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:text="@string/date"
            android:textColor="@color/color1" />

        <RelativeLayout
            android:id="@+id/date"
            android:layout_width="172.5dp"
            android:layout_height="27.5dp"
            android:layout_alignParentEnd="true"
            android:background="@color/black"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/supplier_galaxy_icons_new_arrow_x1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/choose"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:background="@android:color/transparent"
                android:textColor="@color/color_white" />
        </RelativeLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel_title_"
        android:layout_marginBottom="13.5dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:gravity="center"
        android:orientation="horizontal">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_gravity="start"
            android:text="@string/hour"
            android:textColor="@color/color1" />

        <RelativeLayout
            android:id="@+id/hour"
            android:layout_width="172.5dp"
            android:layout_height="27.5dp"
            android:layout_alignParentEnd="true"
            android:background="@color/black"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/supplier_galaxy_icons_new_arrow_x1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:id="@+id/hour_tv"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/choose"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_gravity="start|center_vertical"
                android:gravity="start|center_vertical"
                android:background="@android:color/transparent"
                android:textColor="@color/color_white" />


        </RelativeLayout>


    </RelativeLayout>

    <webit.bthereapp.CustemViews.CustomViewTimePicker
        android:id="@+id/cvTimePicker"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cancel_title_"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:gravity="center"
        android:orientation="horizontal">

        <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
            style="@style/t1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_gravity="start"

            android:text="@string/comments"
            android:textColor="@color/color1" />

        <RelativeLayout
            android:layout_width="172.5dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:background="@color/black"
            android:gravity="end"
            android:orientation="horizontal">


            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                style="@style/t1"
                android:gravity="start"
                android:id="@+id/comments"
                android:layout_marginStart="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:textColor="@color/color_white" />

        </RelativeLayout>


    </RelativeLayout>

    <webit.bthereapp.CustemViews.Fonts.CustomLightButton
        android:id="@+id/ok"
        style="@style/t1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginEnd="34dp"
        android:textAllCaps="false"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_marginBottom="7dp"
        android:background="@color/color3"
        android:gravity="center"
        android:text="@string/update_app"
        android:textColor="@android:color/white" />


</LinearLayout>
