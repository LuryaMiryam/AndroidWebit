<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/al_ty_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/custom_spinner_ll"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color1"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/l_out"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1.5">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/al_type_txt"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start|center_vertical"
                android:gravity="start"
                android:text="aaa"
                android:textColor="@color/color_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/l_in"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:gravity="end"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/c_s_ll33"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_weight="2">

                <LinearLayout
                    android:id="@+id/c_s_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center_vertical"
                    android:background="@color/light_gray_2"
                    android:gravity="end"
                    android:weightSum="5">

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        android:id="@+id/al_type_spinner"
                        style="@style/t1"
                        android:layout_width="0dip"
                        android:layout_height="25dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_weight="5"
                        android:gravity="start|center_vertical"
                        android:paddingStart="5dp"
                        android:textColor="@color/color1"

                        android:ellipsize="none"
                        android:maxLines="1"
                        android:singleLine="true" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="15dp"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginEnd="5dp"
                        android:layout_marginStart="5dp"
                        android:src="@drawable/down_arrow" />


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>



