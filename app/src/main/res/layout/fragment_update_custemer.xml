<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="10dp"
    android:background="@color/light_gray_9"
    android:minHeight="460dp"
    android:minWidth="400dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/close"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_alignParentEnd="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_marginEnd="7.5dp"

            android:background="@drawable/client_galaxy_icons1_22" />
        <!--</LinearLayout>-->

        <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
            android:id="@+id/title"
            style="@style/h1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:text="@string/update_details"
            android:textColor="@color/light_blue"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20.5dp"
        android:layout_marginStart="20.5dp"
        android:orientation="vertical">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/aa"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start|center_vertical"
                android:text="@string/vip_"
                android:textColor="@color/color1" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="6.5dp"
                android:layout_toEndOf="@+id/aa"
                android:src="@drawable/supplier_galaxy_icons_x1_39" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/aa">

                <webit.bthereapp.CustemViews.YesOrNo_White
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"></webit.bthereapp.CustemViews.YesOrNo_White>
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="@string/first_name_"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                style="@style/t1"
                android:layout_width="190.5dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="@color/dark_gray_6_tra"
                android:inputType="text"
                android:paddingStart="5dp"
                android:textColor="@color/color1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="@string/last_name_"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                style="@style/t1"
                android:layout_width="190.5dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="@color/dark_gray_6_tra"
                android:inputType="text"
                android:paddingStart="5dp"
                android:textColor="@color/color1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="start">

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    style="@style/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start|center_vertical"
                    android:gravity="center_vertical"
                    android:text="@string/adress"
                    android:textColor="@color/color1" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end">

                <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                    style="@style/t3"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:background="@color/dark_gray_6_tra"
                    android:hint="@string/city"
                    android:inputType="text"
                    android:paddingStart="5dp"
                    android:textColor="@color/color1" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                    style="@style/t3"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="4.5dp"
                    android:background="@color/dark_gray_6_tra"
                    android:hint="@string/street"
                    android:inputType="text"
                    android:paddingStart="5dp"
                    android:textColor="@color/color1" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                    style="@style/t3"
                    android:layout_width="41.5dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="4.5dp"
                    android:background="@color/dark_gray_6_tra"
                    android:gravity="center"
                    android:hint="@string/number"
                    android:inputType="number"
                    android:paddingStart="5dp"
                    android:textColor="@color/color1" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"

                android:text="@string/mail"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                style="@style/t1"
                android:layout_width="190.5dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="end"
                android:background="@color/dark_gray_6_tra"
                android:inputType="textEmailAddress"
                android:paddingStart="5dp"
                android:textColor="@color/color1" />

        </RelativeLayout>

        <webit.bthereapp.Screens.Supplier.CustomSpinnerPhone
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></webit.bthereapp.Screens.Supplier.CustomSpinnerPhone>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="start"
                android:text="@string/born_date"

                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/date"
                style="@style/t1"
                android:layout_width="190.5dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="@color/dark_gray_6_tra"
                android:gravity="center_vertical"
                android:paddingStart="5dp"
                android:textColor="@color/color1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cancel_title_"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_gravity="start"
                android:gravity="start"
                android:text="@string/comments"
                android:textColor="@color/color1" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightEditText
                style="@style/t1"
                android:layout_width="190.5dp"
                android:layout_height="80dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="end"
                android:background="@color/dark_gray_6_tra"
                android:gravity="start"
                android:paddingStart="5dp"
                android:textColor="@color/color1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp">

            <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                android:id="@+id/ok"
                style="@style/t1"
                android:layout_width="92dp"
                android:layout_height="27.5dp"
                android:layout_alignParentEnd="true"
                android:textAllCaps="false"
                android:layout_gravity="end"
                android:layout_marginStart="25dp"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:gravity="center"
                android:text="@string/update"
                android:textColor="@android:color/white"
                />

        </RelativeLayout>

    </LinearLayout>


</LinearLayout>