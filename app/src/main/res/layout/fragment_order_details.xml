<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                    android:id="@+id/ff"
                    style="@style/h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/finish"
                    android:textColor="@color/color4" />

                <View
                    android:layout_width="35dp"
                    android:layout_height="1.5dp"
                    android:layout_below="@+id/ff"
                    android:background="@color/color4" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                    android:id="@+id/title"
                    style="@style/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="3dp"
                    android:text="@string/oreder_details"
                    android:textColor="@color/pink" />

                <LinearLayout
                    android:id="@+id/back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@color/black"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:paddingStart="1dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/back" />

                    <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                        style="@style/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/back"
                        android:textColor="@color/light_blue" />
                </LinearLayout>
            </RelativeLayout>
            android:layout_marginBottom="3dp"

            <RelativeLayout
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:visibility="gone">

                <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                    android:id="@+id/txt"
                    style="@style/h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/number_q"
                    android:textColor="@color/pink" />

                <RelativeLayout
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_marginStart="3dp"
                    android:layout_toEndOf="@+id/txt"
                    android:gravity="center_horizontal"
                    android:paddingStart="3dp">

                    <ImageView
                        android:id="@+id/distance_image"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY"
                        android:src="@drawable/client_galaxy_icons1_23" />

                    <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                        android:id="@+id/number_txt"
                        style="@style/h2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="1"
                        android:textColor="@color/color3" />
                </RelativeLayout>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="13dp"
                android:background="@color/black" />

            <webit.bthereapp.CustemViews.Fonts.CustomBoldTextView
                android:id="@+id/b_name"
                style="@style/h1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="13dp"
                android:text="" />

            <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                android:id="@+id/service_name"
                style="@style/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    android:id="@+id/day_txt"
                    style="@style/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/black" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    android:id="@+id/date_txt"
                    style="@style/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/black" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    android:id="@+id/hour_txt"
                    style="@style/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <webit.bthereapp.CustemViews.Fonts.CustomLightTextView
                    android:id="@+id/adress_txt"
                    style="@style/t1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="13dp"
                android:background="@color/black" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="70dp"
                android:paddingStart="70dp">

                <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                    android:id="@+id/ok"
                    style="@style/t1"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/personal_details_sign_b_height"
                    android:layout_alignParentEnd="true"
                    android:textAllCaps="false"
                    android:layout_gravity="end"
                    android:layout_marginEnd="13dp"
                    android:background="@color/color4"
                    android:gravity="center"
                    android:text="@string/ok"
                    android:textColor="#ffffff" />

                <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                    android:id="@+id/to_the_next"
                    style="@style/t1"
                    android:textAllCaps="false"
                    android:layout_width="70dp"
                    android:layout_height="@dimen/personal_details_sign_b_height"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginEnd="13dp"
                    android:background="@color/color4"
                    android:gravity="center"
                    android:text="@string/to_the_next"
                    android:textColor="#ffffff"
                    android:visibility="gone" />


                <webit.bthereapp.CustemViews.Fonts.CustomLightButton
                    android:id="@+id/cancel"
                    style="@style/t1"
                    android:layout_width="70dp"
                    android:textAllCaps="false"
                    android:layout_height="@dimen/personal_details_sign_b_height"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="start"
                    android:layout_marginStart="15sp"
                    android:background="@color/color4"
                    android:gravity="center"
                    android:text="@string/cancel"
                    android:textColor="#ffffff" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>